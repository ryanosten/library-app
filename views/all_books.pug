extends layout.pug

block content
  h1 Books
  |
  p
    a.button(href='new_book.html') Create New Book
  |
  p
    | Filters
    a(href='/books') All
    |  |
    a(href='books/overdue') Overdue
    |  |
    a(href='books/checked_books') Checked Out
  |
  table
    thead
      tr
        th Title
        |
        th Author
        |
        th Genre
        |
        th Year Released
    |
    tbody
      each book in books_arr
        -var book_id = book.id
          tr
            td
              a(href='/books/book_detail?id=' + book_id) #{book.title}
            |
            td #{book.author}
            |
            td #{book.genre}
            |
            td #{book.first_published}
